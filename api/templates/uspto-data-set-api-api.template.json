    {
      "name": "[concat(parameters('ApimServiceName'), '/uspto-data-set-api/perform-search')]",
      "type": "Microsoft.ApiManagement/service/apis/operations",
      "apiVersion": "2019-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/apis', parameters('ApimServiceName'), 'uspto-data-set-api')]",
        "[resourceId('Microsoft.ApiManagement/service/apis/schemas', parameters('ApimServiceName'), 'uspto-data-set-api', '5f17393ca6ad26110cdf46e8')]"
      ],
      "properties": {
        "displayName": "Provides search capability for the data set with the given search criteria.",
        "method": "POST",
        "urlTemplate": "/{dataset}/{version}/records",
        "templateParameters": [
          {
            "name": "version",
            "description": "Version of the dataset.",
            "type": "string",
            "defaultValue": "v1",
            "required": true,
            "values": []
          },
          {
            "name": "dataset",
            "description": "Name of the dataset. In this case, the default value is oa_citations",
            "type": "string",
            "defaultValue": "oa_citations",
            "required": true,
            "values": []
          }
        ],
        "description": "This API is based on Solr/Lucene Search. The data is indexed using SOLR. This GET API returns the list of all the searchable field names that are in the Solr Index. Please see the 'fields' attribute which returns an array of field names. Each field or a combination of fields can be searched using the Solr/Lucene Syntax. Please refer https://lucene.apache.org/core/3_6_2/queryparsersyntax.html#Overview for the query syntax. List of field names that are searchable can be determined using above GET api.",
        "request": {
          "queryParameters": [],
          "headers": [],
          "representations": [
            {
              "contentType": "application/x-www-form-urlencoded",
              "formParameters": [
                {
                  "name": "criteria",
                  "type": "string",
                  "defaultValue": "*:*",
                  "values": []
                },
                {
                  "name": "start",
                  "type": "integer",
                  "defaultValue": "0",
                  "values": []
                },
                {
                  "name": "rows",
                  "type": "integer",
                  "defaultValue": "100",
                  "values": []
                }
              ]
            }
          ]
        },
        "responses": [
          {
            "statusCode": 200,
            "description": "successful operation",
            "representations": [
              {
                "contentType": "application/json",
                "schemaId": "5f17393ca6ad26110cdf46e8",
                "typeName": "-dataset--version-RecordsPost200ApplicationJsonResponse",
                "generatedSample": "[\r\n  {}\r\n]"
              }
            ],
            "headers": []
          },
          {
            "statusCode": 404,
            "description": "No matching record found for the given criteria.",
            "representations": [],
            "headers": []
          }
        ]
      },
      "resources": []
    },
